<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/cars8"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="270dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:backgroundTint="#99999999"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="343dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/ic_servicing"
                android:drawablePadding="5dp"
                android:drawableTint="#fff"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:text="@string/servicing"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="325dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:backgroundTint="#99999999"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="343dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/ic_offers"
                android:drawablePadding="5dp"
                android:drawableTint="#fff"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:text="Offers"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>



    </LinearLayout>


    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="380dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:backgroundTint="#99999999"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="343dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/ic_status"
                android:drawablePadding="5dp"
                android:drawableTint="#fff"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:text="Status Of Servicing"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="435dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card4"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:backgroundTint="#99999999"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="343dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/ic_approval"
                android:drawablePadding="5dp"
                android:drawableTint="#fff"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:text="Approval"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>



    </LinearLayout>



</RelativeLayout>